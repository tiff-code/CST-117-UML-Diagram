using System;

namespace Console_App_for_temp
{
    class Program
    {
        //Tiffanie Elder CST-117
        // Item Class Inventory code
        //Temp Converter App
        static void Main(string[] args)
        {
            // item double celsius 
            double celsius;
            Console.Write(" Enter Your fahrenhiet Temp");
            // item double fahrenhiet to convert to celsius
            double fahrenhiet = Convert.ToDouble(Console.ReadLine());
             //item Temp calculate celsius from fahrenhiet
            celsius = (fahrenhiet - 32) * 5 / 9;
             //read and write to console for output of celsius
            Console.WriteLine(" the Celsius is !!" + celsius);
            Console.ReadLine();

        }
    }
}
